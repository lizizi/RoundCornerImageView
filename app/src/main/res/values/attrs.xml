<?xml version="1.0" encoding="utf-8"?>
<resources >
    <declare-styleable name="RoundCornerImageView">
        <!--是否为圆形 为圆形时 忽略圆角 默认false-->
        <attr name="isCircle" format="boolean"/>
        <!--全部圆角-->
        <attr name="allRadius" format="dimension"/>
        <!--上半部左右圆角-->
        <attr name="topRadius" format="dimension"/>
        <!--下半部左右圆角-->
        <attr name="bottomRadius" format="dimension"/>
        <!--左半部上下圆角-->
        <attr name="leftRadius" format="dimension"/>
        <!--右半部上下圆角-->
        <attr name="rightRadius" format="dimension"/>
        <!--左上角圆角-->
        <attr name="leftTopRadius" format="dimension"/>
        <!--右上角圆角-->
        <attr name="rightTopRadius" format="dimension"/>
        <!--右下角圆角-->
        <attr name="rightBottomRadius" format="dimension"/>
        <!--左下角圆角-->
        <attr name="leftBottomRadius" format="dimension"/>

    </declare-styleable>
</resources>